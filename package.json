{
    "name": "pokematch-monorepo",
    "version": "1.0.0",
    "description": "Real-time multiplayer Pokemon `Top trumps` game with WebSocket architecture",
    "author": "leontutu",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/leontutu/pokematch.git"
    },
    "keywords": [
        "pokemon",
        "multiplayer",
        "websocket",
        "react",
        "typescript",
        "game"
    ],
    "workspaces": [
        "client",
        "server",
        "shared"
    ],
    "scripts": {
        "test": "npm run test --workspaces",
        "test:client": "npm run test --workspace=client",
        "test:server": "npm run test --workspace=server",
        "build": "npm run build --workspace=client && npm run build --workspace=server",
        "build:client": "npm run build --workspace=client",
        "build:server": "npm run build --workspace=server",
        "dev:client": "npm run dev --workspace=client",
        "dev:server": "npm run dev --workspace=server"
    },
    "devDependencies": {
        "@types/howler": "^2.2.12"
    }
}
